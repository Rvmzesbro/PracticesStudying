            <TextBlock Text="Введите имя:" Margin="0,0,0,5"/>
            <TextBox x:Name="NameTextBox" Margin="0,0,0,10"/>

            <TextBlock Text="Введите дату рождения:" Margin="0,0,0,5"/>
