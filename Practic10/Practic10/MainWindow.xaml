<Window x:Class="Practic10.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Practic10"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" MinHeight="400" MinWidth="800">
    <Grid VerticalAlignment="Center" HorizontalAlignment="Center">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="5*"/>
        </Grid.RowDefinitions>


        <StackPanel Grid.Row="0" Grid.ColumnSpan="2">
            <TextBlock Text="Данные для авторизации" 
                           FontSize="30" 
                           FontWeight="SemiBold"
                           Margin="300 0 0 30"/>
        </StackPanel>

        <StackPanel Grid.Row="1"
                    Grid.Column="0"
                    Margin="10 30 10 10">
            <StackPanel Orientation="Horizontal"
                        Margin="0 0 0 30">
                <TextBlock Text="Выберите язык ввода" 
                           FontSize="20"/>
                <ComboBox x:Name="CBLanguage" Width="70"
                          Margin="50 0 0 0"
                          BorderBrush="LightBlue"
                          SelectionChanged="CBLanguage_SelectionChanged">
                    <ComboBoxItem Content="RUS"/>
                    <ComboBoxItem Content="ENG"/>
                </ComboBox>
            </StackPanel>

            <StackPanel Orientation="Horizontal"
                        Margin="0 0 0 30">
                <TextBlock FontSize="20"
                           >Введите свое имя на<LineBreak/>русском или английском<LineBreak/>языках</TextBlock>
                <TextBox x:Name="TBName"
                         Width="200"
                         Height="50"
                         Margin="20 0 0 0"
                         BorderBrush="LightBlue"
                         PreviewTextInput="TBName_PreviewTextInput"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal"
                        >
                <TextBlock FontSize="20"
                           Margin="0 0 0 0"
           >Введите/выберите<LineBreak/>дату рождения</TextBlock>
                <DatePicker Width="200"
                         Height="40"
                         Margin="78 0 0 0"
                         BorderBrush="LightBlue"/>
            </StackPanel>
        </StackPanel>

        <StackPanel Grid.Row="2" 
                    Grid.Column="1"
                    Margin="40 10 10 10">
            <StackPanel>
                <Border Width="200" 
                        Height="40"
                        BorderBrush="LightBlue"
                        BorderThickness="2"
                        CornerRadius="5">
                    <Button Content="Сгенерировать логин" 
                            Background="White"
                            BorderBrush="White"
                            Width="200"
                            Height="40"/>
                </Border>
            </StackPanel>
            
            <StackPanel Margin="0 20 0 0">
                <TextBlock Text="Ваш логин"
                           HorizontalAlignment="Center"
                           Margin="0 0 0 10"/>
                <TextBox Width="150"
                         Height="40"
                         BorderBrush="LightBlue"/>
            </StackPanel>

            <StackPanel Margin="0 15 0 0">
                <Border Width="200" 
                        Height="40"
                        BorderBrush="LightBlue"
                        BorderThickness="2"
                        CornerRadius="5">
                    <Button Content="Сгенерировать пароль" 
                            Background="White"
                            BorderBrush="White"
                            Width="200"
                            Height="40"/>
                </Border>
            </StackPanel>

            <StackPanel Margin="0 20 0 0">
                <TextBlock Text="Ваш пароль"
                           HorizontalAlignment="Center"
                           Margin="0 0 0 10"/>
                <TextBox Width="150"
                         Height="40"
                         BorderBrush="LightBlue"/>
            </StackPanel>
        </StackPanel>

    </Grid>
</Window>
