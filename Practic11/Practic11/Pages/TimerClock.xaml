<Page x:Class="Practic11.Pages.TimerClock"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Practic11.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="TimerClock">

    <Grid Background="Black">

        <Border Width="50"
                 Height="25"
                 CornerRadius="3" 
                 BorderBrush="White"
                 BorderThickness="2"
                 HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Margin="10">
            <Button x:Name="BTBack" 
                     Width="50" 
                     Height="25" 
                     Click="BTBack_Click"
                     BorderBrush="White"
                    Background="White">
                <TextBlock Text="Back"
                    Margin="0 -3 4 0"
                           FontSize="15"
                           FontWeight="SemiBold"
                           FontFamily="Courier New"/>
            </Button>
        </Border>

        <TextBlock Text="Таймер"
                    Foreground="White"
                    FontSize="30"
                    FontWeight="SemiBold"
                    FontFamily="Courier New"
                    Margin="10"
                    Width="110"
                    Height="30"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Top"/>


        <TextBlock x:Name="TBSelect"
                    Foreground="White"
                    FontSize="30"
                    FontWeight="SemiBold"
                    FontFamily="Courier New"
                    HorizontalAlignment="Center"
                    Margin="0 0 0 180"
                   VerticalAlignment="Center"/>
        <StackPanel VerticalAlignment="Center"
                HorizontalAlignment="Center">

            
            <StackPanel>
                
                <Border BorderBrush="White" 
                        BorderThickness="2"
                        CornerRadius="5"
                        Width="200"
                        Height="40">
                    <TextBox x:Name="TBInput"
                             Width="198"
                             Height="38"
                             Background="White"
                             BorderBrush="White"
                             BorderThickness="1"
                             GotFocus="TBInput_GotFocus"
                             FontSize="20"/>
                </Border>
            </StackPanel>

            <StackPanel Orientation="Horizontal">


                <Border BorderBrush="Orange"
                        BorderThickness="2"
                        Width="200"
                        Height="50"
                        Background="Orange"
                        Margin="0 15 10 0"
                        CornerRadius="15">
                    <Button x:Name="BT_Cancel"
                            Height="40"
                            Width="190"
                            BorderBrush="Transparent"
                            Background="Transparent"
                            Click="BT_Cancel_Click">
                        <TextBlock x:Name="TBCancel"
                                   Text="Отмена"
                                   Foreground="White"
                                   FontSize="20"
                                   FontFamily="Courier New"
                                   FontWeight="SemiBold"/>
                    </Button>
                </Border>

                <Border BorderBrush="Orange"
                    BorderThickness="2"
                    Width="200"
                    Height="50"
                    Background="Orange"
                    Margin="0 15 0 0"
                    CornerRadius="15">
                    <Button x:Name="BT_Timer"
                        Height="40"
                        Width="190"
                        BorderBrush="Transparent"
                        Background="Transparent"
                        Click="BT_Timer_Click">
                        <TextBlock x:Name="TBAlarm"
                               Text="Старт"
                               Foreground="White"
                               FontSize="20"
                               FontFamily="Courier New"
                               FontWeight="SemiBold"/>
                    </Button>
                </Border>

            </StackPanel>


        </StackPanel>
    </Grid>
</Page>
