<Page x:Class="Practic11.Pages.Main"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Practic11.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Main">

    <Grid Background="Black">

        <TextBlock Text="ЧАСЫ"
                    Foreground="White"
                    FontSize="30"
                    FontWeight="SemiBold"
                    FontFamily="Courier New"
                   
                    Width="80"
                    Height="30"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                   Margin="10"/>
        


        <StackPanel VerticalAlignment="Center"
                    HorizontalAlignment="Center">

            <StackPanel>
                <TextBlock x:Name="TBSelect"
                           Text="Выберите"
                           Foreground="White"
                           FontSize="30"
                           FontWeight="SemiBold"
                           FontFamily="Courier New"
                           HorizontalAlignment="Center"
                           Margin="0 0 0 20"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal">

                <Border BorderBrush="Orange"
                        BorderThickness="2"
                        Width="200"
                        Height="50"
                        Background="Orange"
                        Margin="0 0 100 0"
                        CornerRadius="15">
                    <Button x:Name="BT_AlarmClock"
                            Height="40"
                            Width="190"
                            BorderBrush="Transparent"
                            Background="Transparent"
                            Click="BT_AlarmClock_Click">
                        <TextBlock x:Name="TBAlarm"
                                   Text="Будильник"
                                   Foreground="White"
                                   FontSize="20"
                                   FontFamily="Courier New"
                                   FontWeight="SemiBold"/>
                    </Button>
                </Border>



                <Border BorderBrush="Orange"
                        BorderThickness="2"
                        Width="200"
                        Height="50"
                        Background="Orange"
                        CornerRadius="15">
                    <Button x:Name="BT_TimerClock"
                            Height="40"
                            Width="190"
                            BorderBrush="Transparent"
                            Background="Transparent"
                            Click="BT_TimerClock_Click">
                        <TextBlock x:Name="TBTimer"
                                   Text="Таймер"
                                   Foreground="White"
                                   FontSize="20"
                                   FontFamily="Courier New"
                                   FontWeight="SemiBold"/>
                    </Button>
                </Border>
            </StackPanel>


        </StackPanel>
    </Grid>
</Page>
